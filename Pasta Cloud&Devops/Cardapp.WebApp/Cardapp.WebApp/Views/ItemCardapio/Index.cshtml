
@{
    ViewData["Title"] = "Visualização do Cardápio - Destaques";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />

<style>
    html {
        background-color: #4196A6;
    }
</style>
    <div>
        <div class="d-flex flex-column justify-content-between align-items-center small-left-content">
            <a class="mt-3" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.svg" width="100" />
            </a>
            <a asp-action="index" asp-controller="Home" class="mb-3" style="-moz-transform: scaleX(-1); -o-transform: scaleX(-1); -webkit-transform: scaleX(-1); transform: scaleX(-1);">
                <img src="/img/next.svg" width="80" />
            </a>
        </div>
    </div>
    <div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%">
        @if (@TempData["msg"] != null)
        {
            <div class="alert alert-success">
                <h5 class="text-center">@TempData["msg"]</h5>
            </div>
        }
        <h1 style="display: flex; justify-content: center;" class="my-5 text-white">Edite o cardápio do seu restaurante</h1>
        <div class="card mx-auto" style="width: 80%; border: 2px solid #800; height: 80%">
            <row style="height: 5vh">
                <div class="btn-group w-100 h-100" role="group">
                    <a class="btn btnNavAtual text-white"><span class="material-icons pr-2">star</span>Destaques</a>
                    <a class="btn btnNav" asp-action="Pratos"><span class="material-icons pr-2">restaurant_menu</span>Pratos principais</a>
                    <a class="btn btnNav" asp-action="Bebidas"><span class="material-icons pr-2">local_bar</span>Bebidas</a>
                    <a class="btn btnNav" asp-action="Lanches"><span class="material-icons pr-2">fastfood</span>Lanches</a>
                    <a class="btn btnNav" asp-action="Sobremesas"><span class="material-icons pr-2">icecream</span>Sobremesas</a>
                </div>
            </row>
            <a asp-action="Cadastrar" class="btn btn-danger ml-3 my-3 py-2 px-2" style="width: 20%">Adicionar um novo item no cardápio</a>
            <row>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Foto</th>
                            <th scope="col">Nome do item</th>
                            <th scope="col">Descrição</th>
                            <th scope="col">Valor do item</th>
                            <th scope="col">Valor calórico</th>
                            <th scope="col">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.itens)
                        {
                            <tr>
                                <td  width="250px">
                                    <img src="@item.Foto" style="width: 300px; height: 150px" class="img-thumbnail" alt="...">
                                </td>
                                <td class="align-middle">@item.Nome</td>
                                <td class="align-middle" width="480px">@item.Descricao</td>
                                <td class="align-middle" width="200px">R$ @item.Preco</td>
                                <td class="align-middle" width="200px">@item.ValCalorico kcal</td>
                                <td class="align-middle">
                                    <form asp-action="Index">
                                        <div style="display: flex; flex-direction: column; margin-right: 2vw;">
                                            <a class="mb-3 btn btn-info" asp-action="Editar" asp-route-id="@item.CodigoItem">Editar</a>
                                            <input type="submit" asp-route-id="@item.CodigoItem" class="btn btn-danger" value="Excluir" />
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </row>
        </div>
    </div>

    <style>
        .btnNavAtual {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #800;
            color: white;
        }

            .btnNavAtual:hover {
                color: white;
                background-color: #a00
            }

            .btnNavAtual:focus, .btnNav:focus {
                box-shadow: 0 0 0 0;
                border: 0 none;
                outline: 0;
            }

        .btnNav {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ddd;
            color: #666;
        }
    </style>
