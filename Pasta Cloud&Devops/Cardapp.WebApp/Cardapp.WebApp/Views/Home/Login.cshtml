
@{
    ViewData["Title"] = "Login";
}

<link href="~/css/login.css" rel="stylesheet" />
<link href="~/css/master.css" rel="stylesheet" />

<style>
    html {
        background-color: #4196A6;
    }
</style>

<div style="background-color: #4196A6;">
    <div class="d-flex flex-column justify-content-between align-items-center small-left-content">
        <a class="mt-3" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/logo.svg" width="100" />
        </a>
        <a asp-action="index" asp-controller="Home" class="mb-3" style="-moz-transform: scaleX(-1); -o-transform: scaleX(-1); -webkit-transform: scaleX(-1); transform: scaleX(-1);">
            <img src="/img/next.svg" width="80" />
        </a>
    </div>
    <div class="d-flex justify-content-center">
        <div class="text-center" style="background-color: #fffa; width: 50%; margin: 5% 0;
                    border-radius: 15px; padding: 2%;">
            <h2 style="color: #555; margin-bottom: 2%">Login</h2>
            <form asp-action="Login" asp-controller="ItemCardapio" style="padding-left: 15%; padding-right: 15% ">
                <label for="id-email">E-mail</label>
                <input id="id-email" name="email" class="form-control" />

                <label for="id-senha">Senha</label>
                <input id="id-senha" name="senha" class="form-control" />

                <input type="submit" value="Entrar" class="btn btn-info" style="margin-top: 5%" />
            </form>
        </div>
    </div>
    </divback>
